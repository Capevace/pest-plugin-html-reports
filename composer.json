{
	"name": "mateffy/pest-plugin-html-reports",
	"description": "Generate interactive HTML reports of Pest test results",
	"license": "MIT",
	"authors": [
		{
			"name": "Lukas Mateffy",
			"email": "hello@mateffy.me",
			"homepage": "https://mateffy.me",
			"role": "Developer"
		}
	],
	"autoload": {
		"psr-4": {
			"Mateffy\\HtmlReports\\": "src/"
		},
		"files": [
			"src/Support/Helpers.php"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"Mateffy\\HtmlReports\\Tests\\": "tests/"
		}
	},
	"require": {
		"php": "^8.1",
		"spatie/laravel-package-tools": "^1.16"
	},
	"require-dev": {
		"laravel/pint": "^1.24",
		"orchestra/testbench": "^9.0",
		"pestphp/pest": "^2.0",
		"phpunit/phpunit": "^10.0 || ^11.0",
		"spatie/laravel-markdown": "^2.0"
	},
	"scripts": {
		"post-autoload-dump": [
			"@clear",
			"@prepare"
		],
		"clear": [
			"@php vendor/bin/testbench package:purge-skeleton --ansi"
		],
		"prepare": [
			"@php vendor/bin/testbench package:discover --ansi"
		],
		"build": [
			"@php vendor/bin/testbench workbench:build --ansi"
		],
		"serve": [
			"Composer\\Config::disableProcessTimeout",
			"@build",
			"@php vendor/bin/testbench serve"
		],
		"test": "vendor/bin/pest",
		"test-coverage": "vendor/bin/pest --coverage",
		"format": "vendor/bin/pint"
	},
	"extra": {
		"laravel": {
			"providers": [
				"Mateffy\\HtmlReports\\HtmlReportsServiceProvider"
			]
		},
		"pest": {
			"plugins": [
				"Mateffy\\HtmlReports\\ReportPlugin"
			]
		},
		"workbench": {
			"config": "workbench.php"
		}
	},
	"config": {
		"sort-packages": true,
		"allow-plugins": {
			"pestphp/pest-plugin": true
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true
}
